{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SiteSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "CommerceManagerSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "sqlserverAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "sqlserverAdminLoginPassword": {
      "type": "securestring"
    },
    "ContentDBCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "ContentDBEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "ContentDBRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    },
    "CommerceDBCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "CommerceDBEdition": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "CommerceDBRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "serviceBusSku": {
      "type": "string",
      "allowedValues": [
        "Basic",
        "Standard"
      ],
      "defaultValue": "Standard",
      "metadata": {
        "description": "The messaging tier for service Bus namespace"
      }
    }
  },
  "variables": {
    "SiteName": "[concat('resourceGroup().name', '-web')]",
    "CommerceManagerName": "[concat('resourceGroup().name', '-cm')]",
    "sqlserverName": "[concat('resourceGroup().name','-sqlserver')]",
    "storageAccountName": "[concat('resourceGroup().name', '-storage')]",
    "serviceBusNamespaceName": "[concat('resourceGroup().name', '-servicebus'])",
    "ContentDBName": [ "concat('resourceGroup().name', '-db-cms'])" ],
    "CommerceDBName": [ "concat('resourceGroup().name', '-db-commerce'])" ],
    "storageId": "[]",
    "storageConnectionStringPrefix": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('StorageAccountName'),';AccountKey=')]"
  },
  "resources": [
    {
      "name": "[variables('SiteName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('SiteSkuName')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "SitePlan"
      },
      "properties": {
        "name": "[variables('SiteName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[variables('SiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('SiteName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "[concat('Microsoft.Sql/servers/', variables('sqlserverName'))]",
        "[concat('Microsoft.ServiceBus/namespaces/', variables('serviceBusNamespaceName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', variables('SiteName')))]": "Resource",
        "displayName": "Site"
      },
      "properties": {
        "name": "[variables('SiteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('SiteName'))]"
      },
      "resources": [
        {
          "name": "connectionstrings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('SiteName'))]"
          ],
          "tags": {
            "displayName": "ConnectionStrings"
          },
          "properties": {
            "EPiServerAzureBlobs": {
              "value": "[concat([concat('DefaultEndpointsProtocol=https;AccountName=',parameters('StorageAccountName'),';AccountKey=')], listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), variables('storageAccountApiVersion')).key1)]",
              "type": "Custom"
            },
            "EPiServerAzureEvents": {
              "value": "[listkeys(variables('defaultAuthRuleResourceId'), variables('serviceBusApiVersion')).primaryConnectionString]",
              "type": "Custom"
            },
            "EPiServerDB": {
              "value": "[concat('Server=tcp:', reference(concat('Microsoft.Sql/servers/', variables('sqlserverName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('ContentDBName'), ';User Id=', parameters('sqlserverAdminLogin'), '@', variables('sqlserverName'), ';Password=', parameters('sqlserverAdminLoginPassword'), ';Trusted_Connection=False;Encrypt=True;Connection Timeout=30;MultipleActiveResultSets=True')]",
              "type": "SQLAzure"
            },
            "EcfSqlConnection": {
              "value": "[concat('Server=tcp:', reference(concat('Microsoft.Sql/servers/', variables('sqlserverName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('CommerceDBName'), ';User Id=', parameters('sqlserverAdminLogin'), '@', variables('sqlserverName'), ';Password=', parameters('sqlserverAdminLoginPassword'), ';Trusted_Connection=False;Encrypt=True;Connection Timeout=30;Application Name=ECApplication')]",
              "type": "SQLAzure"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('CommerceManagerName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "sku": {
        "name": "[parameters('CommerceManagerSkuName')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "CommerceManagerPlan"
      },
      "properties": {
        "name": "[variables('CommerceManagerName')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[variables('CommerceManagerName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('CommerceManagerName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "[concat('Microsoft.Sql/servers/', variables('sqlserverName'))]",
        "[concat('Microsoft.ServiceBus/namespaces/', variables('serviceBusNamespaceName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', variables('CommerceManagerName')))]": "Resource",
        "displayName": "CommerceManager"
      },
      "properties": {
        "name": "[variables('CommerceManagerName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('CommerceManagerName'))]"
      },
      "resources": [
        {
          "name": "connectionstrings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', variables('CommerceManagerName'))]"
          ],
          "tags": {
            "displayName": "ConnectionStrings"
          },
          "properties": {
            "EPiServerAzureBlobs": {
              "value": "[concat([concat('DefaultEndpointsProtocol=https;AccountName=',parameters('StorageAccountName'),';AccountKey=')], listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), variables('storageAccountApiVersion')).key1)]",
              "type": "Custom"
            },
            "EPiServerAzureEvents": {
              "value": "[listkeys(variables('defaultAuthRuleResourceId'), variables('serviceBusApiVersion')).primaryConnectionString]",
              "type": "Custom"
            },
            "EPiServerDB": {
              "value": "[concat('Server=tcp:', reference(concat('Microsoft.Sql/servers/', variables('sqlserverName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('ContentDBName'), ';User Id=', parameters('sqlserverAdminLogin'), '@', variables('sqlserverName'), ';Password=', parameters('sqlserverAdminLoginPassword'), ';Trusted_Connection=False;Encrypt=True;Connection Timeout=30;MultipleActiveResultSets=True')]",
              "type": "SQLAzure"
            },
            "EcfSqlConnection": {
              "value": "[concat('Server=tcp:', reference(concat('Microsoft.Sql/servers/', variables('sqlserverName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('CommerceDBName'), ';User Id=', parameters('sqlserverAdminLogin'), '@', variables('sqlserverName'), ';Password=', parameters('sqlserverAdminLoginPassword'), ';Trusted_Connection=False;Encrypt=True;Connection Timeout=30;Application Name=ECApplication')]",
              "type": "SQLAzure"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('sqlserverName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [],
      "tags": {
        "displayName": "sqlserver"
      },
      "properties": {
        "administratorLogin": "[parameters('sqlserverAdminLogin')]",
        "administratorLoginPassword": "[parameters('sqlserverAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlserverName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "[variables('ContentDBName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlserverName'))]"
          ],
          "tags": {
            "displayName": "ContentDB"
          },
          "properties": {
            "collation": "[parameters('ContentDBCollation')]",
            "edition": "[parameters('ContentDBEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('ContentDBRequestedServiceObjectiveName')]"
          },
          "resources": [

          ]
        },
        {
          "name": "[variables('CommerceDBName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', variables('sqlserverName'))]"
          ],
          "tags": {
            "displayName": "CommerceDB"
          },
          "properties": {
            "collation": "[parameters('CommerceDBCollation')]",
            "edition": "[parameters('CommerceDBEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('CommerceDBRequestedServiceObjectiveName')]"
          }
        }
      ]
    },
    {
      "name": "[variables('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "storageAccount"
      },
      "kind": "Storage"
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('serviceBusNamespaceName')]",
      "type": "Microsoft.ServiceBus/namespaces",
      "location": "[resourceGroup().location]",
      "kind": "Messaging",
      "tags": {
        "displayName": "ServiceBus"
      },
      "sku": {
        "name": "[parameters('serviceBusSku')]",
        "tier": "[parameters('serviceBusSku')]"
      },
      "properties" : {}
    }
  ],
  "outputs": {}
}
